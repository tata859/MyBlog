<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登陆</title>
    <link rel="stylesheet" href="../css/origin.css">
    <link rel="stylesheet" href="../layui/css/layui.css">
    <script src="../layui/layui.js"></script>
    <link rel="stylesheet" href="../less/logon.css">
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery/3.5.0/jquery.min.js"></script>
</head>
<body>
<div id="log-bg">
    <div class="content">
        <div class="log-img"></div>
        <div class="logon">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <label class="layui-form-label"><img src="../images/username.png" alt=""></label>
                    <div class="layui-input-inline">
                        <input type="text" name="username" required  lay-verify="username" placeholder="请输入账号" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label"><img src="../images/password.png" alt=""></label>
                    <div class="layui-input-inline">
                        <input type="password" name="password" required lay-verify="password" placeholder="请输入密码" autocomplete="off" class="layui-input">
                    </div>
                </div>

                <div class="sign">
                    <div class="sign-l"><span>记住密码</span></div>
                    <div class="sign-r"><a href="javascript:">忘记密码</a></div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit lay-filter="logon">立即登陆</button>
                        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    </div>
                </div>
            </form>
            <div class="foot">还没有账户？<a href="/register">马上注册</a></div>
            <script>
                //Demo
                layui.use('form', function(){
                    var form = layui.form;
                    //监听提交
                    form.on('submit(logon)', function(data){
                        $.ajax({
                            method:"POST",
                            url:"/logon",
                            data:data.field,
                            success:function (data) {
                                if(data.code===1){
                                    location.href="/"
                                }
                                else {
                                    layer.alert(data.msg,function () {
                                        layer.close(layer.index)
                                    })
                                }
                            }
                        })
                        return false;
                    });
                });
            </script>
        </div>
    </div>
</div>
</body>
</html>